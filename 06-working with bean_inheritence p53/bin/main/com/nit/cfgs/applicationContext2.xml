<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
<!-- 	here abstruct = true mean define all the common property of bike and throw child class use  -->
	<bean id="basePulsor" class="com.nit.bean.Bike" abstract="true" >
		<property name="make" value="BAJAJ"></property>
		<property name="enginCC" value="150"></property>
	</bean>
	<bean id="pulsor1" class="com.nit.bean.Bike" parent="basePulsor">
		<property name="id" value="TS021111"></property>
	</bean>
	<bean id="pulsor2" class="com.nit.bean.Bike" parent="basePulsor">
		<property name="id" value="TS082222"></property>
	</bean>
	
<!-- 	in above configuration define all common property through abstract and access via inherited class of abstract class -->
	
</beans>
